{
  "family": "mate-demo-dev-django",
  "taskRoleArn": "arn:aws:iam::528424611228:role/mate-demo-dev-ecs-task",
  "executionRoleArn": "arn:aws:iam::528424611228:role/mate-demo-dev-ecs-task-execution",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "django",
      "image": "528424611228.dkr.ecr.us-east-1.amazonaws.com/mate-django-dev:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "config.settings.production"
        },
        {
          "name": "DJANGO_ALLOWED_HOSTS",
          "value": "*"
        },
        {
          "name": "USE_DOCKER",
          "value": "yes"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:528424611228:secret:mate-demo-dev-db-credentials-Yl39Re"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:528424611228:secret:mate-demo-dev-redis-auth-bJP7xU"
        },
        {
          "name": "DJANGO_SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:528424611228:secret:mate-demo-dev-django-secret-C9W52M"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/mate-demo-dev/django",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "python manage.py health_check || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
