#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

# Log environment for debugging
echo "Starting Django with environment:"
echo "DJANGO_SETTINGS_MODULE: ${DJANGO_SETTINGS_MODULE:-not set}"
echo "DJANGO_ALLOWED_HOSTS: ${DJANGO_ALLOWED_HOSTS:-not set}"

# Run collectstatic with verbosity
python /app/manage.py collectstatic --noinput -v 2

# Add more logging to gunicorn
exec /usr/local/bin/gunicorn config.asgi \
    --bind 0.0.0.0:8000 \
    --chdir=/app \
    -k uvicorn_worker.UvicornWorker \
    --access-logfile - \
    --error-logfile - \
    --log-level info
